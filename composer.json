{
    "name": "sweelix/yii2-sendgrid",
    "description": "PHP 5.6+ Sendgrid integration for the Yii framework",
    "keywords": ["yii2", "sendgrid", "mail", "email", "mailer"],
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Philippe Gaultier",
            "email": "pgaultier@gmail.com"
        }
    ],
    "require": {
        "yiisoft/yii2": "~2.0",
        "sendgrid/sendgrid": "~4.0",
        "php" : ">=5.6.0"
    },
    "require-dev" : {
        "php" : ">=5.6.0",
        "codeception/codeception": "~2.2"
    },
    "autoload": {
        "psr-4": { "sweelix\\sendgrid\\": "src" }
    },
    "extra": {
        "branch-alias": {
            "dev-devel": "1.0.x-dev"
        }
    }
}
